@using System.Security.Claims
@model IEnumerable<PetAdoptionCenter.Domain.Models.Pet>



<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <a asp-action="ExportAllPetsByShelter" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)" class="btn btn-secondary">Export Pets</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHouseTrained)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FavouriteThings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeRequirements)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Breed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsHouseTrained)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FavouriteThings)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeRequirements)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhotoUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shelter.FirstName)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    @if(item.PetStatus == PetAdoptionCenter.Domain.enums.PetStatus.AVAILABLE_FOR_ADOPTION)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark">Edit</a>
                        
                    }


                    <a asp-controller="AdoptionApplications" asp-action="Applications" asp-route-petId="@item?.Id" class="btn btn-primary">Applications</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
